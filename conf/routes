# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Serve index page from public directory
GET     /                           controllers.FrontendController.index()

# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /api/summary                controllers.HomeController.appSummary

# get all contries
GET     /api/countries               controllers.CountriesController.list
GET     /api/country/:countryId      controllers.CountriesController.one(countryId: reactivemongo.bson.BSONObjectID)

# get all leagues
GET     /api/leagues                controllers.LeaguesCtrl.list

# get all matches
GET     /api/matches                controllers.MatchesCtrl.list

# post matches
POST    /api/matches                controllers.MatchesCtrl.addMatch

# post betsO2O
POST    /api/betsO2O                controllers.BetsO2OCtrl.addBetO2O

# Serve static assets under public directory
GET     /*file                      controllers.FrontendController.assetOrDefault(file)
